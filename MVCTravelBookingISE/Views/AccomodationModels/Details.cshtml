@model MVCTravelBookingISE.Models.AccomodationModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-xxl-center">More information about the Accomodation</h1>

      
    <hr />
    <div class="card text-center">
    <div class="card-header"> @Html.DisplayFor(model => model.Acco_Destination)</div>
    <img class="card-img-top align-content-md-center" style="height:300px; width:350px; " src=" @Html.DisplayFor(model => model.Acco_picture)" />
    <div class="card-body">
        <h3 class="card-title"> @Html.DisplayFor(model => model.Acco_Name)</h3>
        
        <p class="card-text"> @Html.DisplayFor(model => model.Acco_Rules)</p>
     
      
         <a class="btn btn-success text-white" data-toggle="popover"
       asp-controller="BookingModels"
       asp-action="AddItemToBookingCart"
       asp-route-id="@Model?.Acco_Id">
        <!-- Full screen modal -->
         Add to booking
        
    </a>
    </div>
    <div class="card-footer text-muted">@Html.DisplayFor(model => model.Acco_Rate)</div>
</div>
      
<div>
     
    <a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model?.Acco_Id">Edit</a> 
    <a class="btn btn-outline-dark"asp-action="Index">Back to List</a>
    <a class="btn btn-success text-white " data-toggle="popover"

       asp-controller="BookingModels"
       asp-action="AddItemToBookingCart"
       asp-route-id="@Model?.Acco_Id">
        <!-- Full screen modal -->
         Add to booking(Price @Model?.Acco_Price.ToString("c"))
        
    </a>
</div>
